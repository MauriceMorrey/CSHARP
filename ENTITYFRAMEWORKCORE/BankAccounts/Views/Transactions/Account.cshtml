@model BankAccounts.Models.Transactions

<h2>Welcome, @ViewBag.Client</h2>

<h4>Current Balance: @ViewBag.Balance</h4>
<fieldset>
    <form asp-controller="Transactions" asp-action="CreateTransaction" method="post">
        <!-- <h4>Deposit/Withdraw</h4>
        <input type="number" class="form-control"  asp-for="Amount"/>
        @if (ViewBag.Message != null)
        {
            <p class="text-danger">@ViewBag.Message </p>
        }
        <br> -->
        <label asp-for="Amount"></label>
        <input type="number" asp-for="Amount" class="form-control"/>
        <span asp-validation-for="Amount"></span>
        @if (ViewBag.Message != null)
        {
            <p class="text-danger">@ViewBag.Message </p>
        }
        <br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</fieldset>
<table class="table table-striped table-dark">
    <thead>
        <th scope="col">Amount</th>
        <th scope="col">Date</th>
    </thead>
    <!-- create foreach loop here -->
    @{
        foreach (var item in @ViewBag.TransactionInfo)
        {
            <tbody>
                <tr>
                    <td>@item.Amount</td>
                    <td>@item.TransactionDate</td>
                </tr>
            </tbody>
        }
    }
</table>   